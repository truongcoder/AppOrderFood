<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_thembanan"
    android:layout_width="300dp"
    android:layout_height="190dp"
    android:orientation="vertical"
    tools:context="com.example.pctruong.apporderfood.Activity.ThemBanAn_Activity">
    <TextView
        android:textSize="18sp"
        android:textColor="#000"
        android:padding="10dp"
        android:gravity="center"
        android:text="Thêm Bàn Ăn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="20dp"
        android:id="@+id/inputTenBanAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edttenbanan"
            android:hint="@string/tenbanan"
            android:padding="@dimen/size10"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/bogoc_button"
        android:textAllCaps="false"
        android:id="@+id/btnthembanan"
        android:layout_gravity="center"
        android:text="@string/dongy"
        android:layout_width="150dp"
        android:layout_height="40dp" />
</LinearLayout>
